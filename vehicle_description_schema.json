{
  "title": "VehicleDescription",
  "type": "array",
  "minItems": 1,
  "description": "Array of vehicle parts. The first item describes the towing vehicle. The remaining items describe subsequently attached trailers. ",
  "items": {
    "$ref": "#/definitions/VehiclePart",
    "x-stoplight": {
      "id": "hiy3gs0xmn9r5"
    }
  },
  "definitions": {
    "Axle": {
      "title": "Axle",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "position": {
          "$ref": "#/definitions/Position"
        },
        "wheels": {
          "type": "array",
          "description": "An array of wheels attached to the axle. The positions of the wheels are in reference to the axle's position.",
          "items": {
            "$ref": "#/definitions/Wheel"
          }
        }
      }
    },
    "Geometry": {
      "title": "Geometry",
      "type": "object",
      "description": "What is the anchor point which the position refers to?",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Box"
          ]
        },
        "dimensions": {
          "$ref": "./BoxDimensions.json"
        },
        "position": {
          "$ref": "#/definitions/Position"
        }
      }
    },
    "Joint": {
      "x-stoplight": {
        "id": "a5ccp9adpr4ex"
      },
      "title": "Joint",
      "type": "object",
      "properties": {
        "position": {
          "$ref": "#/definitions/Position",
          "x-stoplight": {
            "id": "eatp511bha0ah"
          },
          "description": "The position of the joint"
        },
        "max_angle": {
          "type": "number",
          "x-stoplight": {
            "id": "2zcddbhksd0bq"
          },
          "exclusiveMinimum": 0,
          "maximum": 90,
          "description": "Represents the maximum allowable angle to which the joint can extend."
        }
      },
      "description": "Describes a hinge joint where two vehicle parts are linked together. "
    },
    "Position": {
      "title": "Position",
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        }
      }
    },
    "VehiclePart": {
      "x-stoplight": {
        "id": "hiy3gs0xmn9r5"
      },
      "title": "VehiclePart",
      "type": "object",
      "examples": [
        {
          "axles": [
            {
              "name": "string",
              "position": {
                "x": 0,
                "y": 0,
                "z": 0
              },
              "wheels": [
                {
                  "position": {
                    "x": 0,
                    "y": 0,
                    "z": 0
                  },
                  "tire": {
                    "diameter": 0,
                    "width": 0
                  }
                }
              ]
            }
          ],
          "geometry": {
            "length": 0,
            "width": 0,
            "height": 0
          }
        }
      ],
      "description": "Describes the properties of a vehicle part. A vehicle part is either a towing machine or a trailer. \n\nAll positions used for describing the vehicle part and its components refer to a fixed cartesian coordinate system which can be arbitrarily chosen but is subject to following constraints:\n  * x - forwards\n  * y - left\n  * z - up",
      "properties": {
        "geometry": {
          "$ref": "#/definitions/Geometry"
        },
        "axles": {
          "type": "array",
          "description": "Array of axles\n",
          "items": {
            "$ref": "#/definitions/Axle"
          }
        },
        "reference_position": {
          "$ref": "#/definitions/Position",
          "description": "The reference position of the root coordinate system of the vehicle"
        },
        "front_joint": {
          "$ref": "#/definitions/Joint",
          "x-stoplight": {
            "id": "941spznhu75k8"
          }
        },
        "rear_joint": {
          "$ref": "#/definitions/Joint",
          "x-stoplight": {
            "id": "a5ccp9adpr4ex"
          }
        }
      },
      "required": [
        "geometry",
        "axles"
      ]
    },
    "Wheel": {
      "title": "Wheel",
      "type": "object",
      "description": "Describes a wheel.  \n\nTire diameter or radius?\nAdditional properties like stiffness etc?\nwheel name?",
      "properties": {
        "position": {
          "$ref": "#/definitions/Position"
        },
        "tire": {
          "type": "object",
          "description": "The tire is the rubber component that fits around the wheel. ",
          "required": [
            "diameter",
            "width"
          ],
          "properties": {
            "diameter": {
              "type": "number"
            },
            "width": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "position",
        "tire"
      ]
    }
  }
}
